<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.question')) -%></h1>

<div id="content_list">
  <%= form_for :questions, :url => questions_path, :html => {:method => 'get'} do -%>
  <p>
    <%= t('page.search_term') -%>: <%= search_field_tag 'query', h(@query), {:id => 'search_form_top', :class => 'search_form'} -%>
    <%= submit_tag t('page.search') -%>
  </p>
  <%= javascript_tag("$('#search_form_top').focus()") -%>
  <%- end -%>

  <%= render 'list' -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <%= render 'solved_facet' -%>
  <ul>
    <li><%= link_to t('question.all'), questions_path %></li>
  </ul>
  <%= render 'crd' -%>
</div>
