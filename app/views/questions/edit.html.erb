<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.question')) -%></h1>
<div id="content_list">

<%= form_for(@question, :url => user_question_path(@question.user, @question)) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.models.user') -%><br />
    <%= link_to h(@question.user.username), @question.user -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.question.body') -%><br />
    <%= f.text_area :body, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.question.shared') -%>
    <%= f.check_box :shared -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.question.solved') -%>
    <%- if @question.user == current_user -%>
      <%= f.check_box :solved -%>
    <%- else -%>
      <%= f.check_box :solved, :disabled => 'disabled' -%>
    <%- end -%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<%- end -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.show'), user_question_path(@question.user, @question) -%></li>
    <li><%= link_to t('page.back'), user_questions_path(@question.user) -%></li>
  </ul>
</div>
