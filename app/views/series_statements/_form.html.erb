  </div>
  <div class="field">
    <%= f.label :title_subseries %><br />
    <%= f.text_field :title_subseries %>
  </div>
  <div class="field">
    <%= f.label :numbering_subseries -%><br />
    <%= f.text_field :numbering_subseries %>
  </div>
  -->
  <div class="field">
    <%= f.label :series_statement_identifier -%><br />
    <%= f.text_field :series_statement_identifier, :class => 'resource_item_identifier' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
