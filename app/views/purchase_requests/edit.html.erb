<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.purchase_request')) -%></h1>
<div id="content_list">

<%= form_for(@purchase_request, :url => user_purchase_request_path(@purchase_request.user, @purchase_request)) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.models.user') -%><br />
    <%= link_to h(@purchase_request.user.username), @purchase_request.user -%>
    <%= f.hidden_field :user_id -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.title') -%><br />
    <%= f.text_area :title, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.author') -%><br />
    <%= f.text_area :author, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.publisher') -%><br />
    <%= f.text_area :publisher, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.isbn') -%><br />
    <%= f.text_field :isbn, :class => 'resource_isbn_issn' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.date_of_publication') -%><br />
    <%= f.text_field :date_of_publication, :value => @purchase_request.date_of_publication.try(:strftime, "%Y-%m-%d"), :class => 'date_field' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.price') -%><br />
    <%= f.text_field :price, :class => 'resource_integer' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.url') -%><br />
    <%= f.url_field :url, :class => 'resource_url' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.purchase_request.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<%- end -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.show'), user_purchase_request_path(@purchase_request.user.username, @purchase_request) -%></li>
    <li><%= link_to t('page.back'), user_purchase_requests_path(@purchase_request.user.username, :page => flash[:page] ||= nil) -%></li>
  </ul>
</div>
