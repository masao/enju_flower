<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.bookmark')) -%></h1>
<div id="content_list">

<%= form_for(@bookmark, :url => user_bookmark_path(@bookmark.user.username, @bookmark)) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('page.title') -%><br />
    <%- if @bookmark.manifestation -%>
      <%= link_to h(@bookmark.manifestation.original_title), h(@bookmark.manifestation.access_address) -%>
    <%- else -%>
      <%= f.text_field :manifestation_id -%>
    <%- end -%>
  </p>

  <p>
    <%= f.label t('activerecord.models.tag') -%><br />
    <%= f.text_field :tag_list, :class => 'resource_title' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.bookmark.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit %>
  </p>
<%- end -%>
</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.showing', :model => t('activerecord.models.manifestation')), @bookmark.manifestation -%></li>
    <li><%= link_to t('page.show'), user_bookmark_path(@bookmark.user.username, @bookmark) -%></li>
    <li><%= link_to t('page.back'), user_bookmarks_path(@bookmark.user.username) -%></li>
  </ul>
</div>
