<div id="content_detail" class="ui-corner-all">
<h1 class="title"><%= t('page.editing', :model => t('activerecord.models.answer')) -%></h1>
<div id="content_list">

<%= form_for(@answer, :url => user_question_answer_path(@answer.user, @answer.question, @answer)) do |f| -%>
  <%= f.error_messages -%>

  <p>
    <%= f.label t('activerecord.models.user') -%><br />
    <%= link_to @answer.user.username, @answer.user -%>
  </p>

  <p>
    <%= f.label t('activerecord.models.question') -%><br />
    <%= link_to @answer.question.body, question_path(@answer.question) -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.answer.body') -%><br />
    <%= f.text_area :body, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.answer.item_identifier_list') -%><br />
    <%= f.text_area :item_identifier_list, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.answer.url_list') -%><br />
    <%= f.text_area :url_list, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit t('page.update') -%>
  </p>
<%- end -%>

</div>
</div>

<div id="submenu" class="ui-corner-all">
  <ul>
    <li><%= link_to t('page.show'), user_question_answer_path(@answer.user, @answer.question, @answer) -%></li>
    <li><%= link_to t('page.back'), user_question_answers_path(@answer.user, @answer.question) -%></li>
  </ul>
</div>
