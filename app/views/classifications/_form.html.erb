<%= form_for(@classification) do |f| -%>
  <%= f.error_messages -%>

  <div class="field">
    <%= f.label t('activerecord.attributes.classification.category') -%><br />
    <%= f.text_field :category -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.attributes.classification.note') -%><br />
    <%= f.text_area :note, :class => 'resource_textarea' -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.classification') -%><br />
    <%= f.select(:classification_type_id, @classification_types.collect{|c| [c.name, c.id]}) -%>
  </div>

  <div class="field">
    <%= f.submit -%>
  </div>
<%- end -%>
