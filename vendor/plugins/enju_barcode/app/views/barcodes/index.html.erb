<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.barcode')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th><%= t('activerecord.attributes.barcode.barcode_type') -%></th>
    <th><%= t('activerecord.attributes.barcode.barcodable') -%></th>
  </tr>

<%- for barcode in @barcodes -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td><%= barcode.barcode_type -%></td>
    <td><%= link_to h("#{barcode.barcodable_type} / #{barcode.barcodable_id}"), barcode.barcodable if barcode.barcodable -%></td>
    <td><%= link_to t('page.show'), barcode -%></td>
    <td><%= link_to t('page.edit'), edit_barcode_path(barcode) -%></td>
    <td><%= link_to t('page.destroy'), barcode, :confirm => t('page.are_you_sure'), :method => :delete -%></td>
  </tr>
<%- end -%>
</table>

<%= will_paginate(@barcodes) -%>
</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.barcode')), new_barcode_path -%></li>
  </ul>
</div>
